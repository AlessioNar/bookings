{{template "base" .}}

{{define "content"}}

<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h1 class="mt-5">Search for Availability</h1>

      <form action="reservation.html" method="get">
        <div class="row">
          <div class="col">
            <div class="row" id="reservation-dates">
              <div class="col">
                <input required class="form-control" type="text" name="start" placeholder="Arrival date">
              </div>
              <div class="col">
                <input required class="form-control" type="text" name="end" placeholder="Departure date">
              </div>
            </div>
          </div>
        </div>
        <hr>
        <button type="submit" class="btn btn-primary">Search Availability</button>

      </form>
    </div>

  </div>
  <div class="row">
    <div class="col">
      <p id="myParagraph">This is some text.</p>
      <p>
        <button id="colorButton" class="btn btn-outline-secondary">Click me</button>
      </p>
    </div>
  </div>
</div>
</div>

{{end}}
